<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Rent It</title>
    <script src="https://kit.fontawesome.com/1154e1d6ee.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/assets/js/home.js" defer></script>
    <script src="~/assets/js/contact.js" defer></script>
    <script src="~/assets/js/blog.js" defer></script>
    <script src="~/assets/js/vehicles.js" defer></script> 
    <link rel="stylesheet" href="~/assets/css/home.css">
    <link rel="stylesheet" href="~/assets/css/contact.css">
    <link rel="stylesheet" href="~/assets/css/blog.css">
    <link rel="stylesheet" href="~/assets/css/vehicles.css">
    <link rel="stylesheet" href="~/assets/css/reservations.css">
</head>
<body>
    <!-- Header Navbar -->
    <div class="header-container">
        <header class="site-header">
            <div class="logo">
                <img src="https://jthemes.net/themes/html/rentit/assets/img/logo-rentit.png" alt="Rent It Logo">
            </div>
            <nav>
                <ul class="nav">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Vehicle" asp-action="Vehicle">Vehicles</a></li>
                    <li><a asp-controller="Reservation" asp-action="AvailableCars">Reserve a Car</a></li>
                    <li><a asp-controller="Reservation" asp-action="MyReservations">My Reservations</a></li>
                    <li><a asp-controller="Blog" asp-action="Index">Blog</a></li>
                    <li><a asp-controller="Testimonial" asp-action="AddTestimonial">Rate Our Service</a></li>
                    <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                    {
                        <li><a asp-controller="Admin" asp-action="Dashboard">Admin Dashboard</a></li>
                    }
                    <li><a href="https://www.facebook.com" target="_blank" rel="noopener"><i class="fa fa-facebook"></i></a></li>
                    <li><a href="https://www.twitter.com" target="_blank" rel="noopener"><i class="fa fa-twitter"></i></a></li>
                 
                </ul>
            </nav>
            <div class="pe-3">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="d-flex justify-content-end align-items-center">
                        <div class="dropdown">
                            <button class="btn dropdown-toggle d-flex align-items-center"
                                    type="button"
                                    id="userDropdown"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false"
                                    style="background-color: black; color: white;">
                                <i class="fa fa-user-circle me-2 text-white"></i>
                                <span class="username fw-bold text-white">@User.Identity.Name</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a asp-controller="Account" asp-action="ChangePassword" class="dropdown-item">
                                        <i class="fa fa-key me-2"></i> Change Password
                                    </a>
                                </li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fa fa-sign-out-alt me-2"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                }
                else
                {
                    <div class="d-flex justify-content-end">
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary me-2">Register</a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-secondary">Login</a>
                    </div>
                }
            </div>
        </header>
    </div>

    <!-- Main Content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <!-- Footer -->
    <footer class="footer bg-dark text-light py-4">
        <div class="container">
            <div class="row">
                <!-- Contact Information -->
                <div class="col-md-6 mb-4">
                    <h4 class="text-uppercase mb-3">Contact Information</h4>
                    <p>Address: 1600 Pennsylvania Ave NW, Washington, D.C. DC 20500, USA</p>
                    <p>Support Phone: 01865 339665</p>
                    <p>Email: <a href="mailto:info@example.com" class="text-light">info@example.com</a></p>
                    <p>Working Hours: 09:30-21:00 (Closed on Sundays)</p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-3 mb-4">
                    <h4 class="text-uppercase mb-3">Quick Links</h4>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Blog" asp-action="Index">Blog</a></li>
                        <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                    </ul>
                </div>

                <!-- Social Media Links -->
                <div class="col-md-3 mb-4 text-center">
                    <h4 class="text-uppercase mb-3">Follow Us</h4>
                    <a href="#" class="text-light me-3 fs-5"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="text-light me-3 fs-5"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-light fs-5"><i class="fab fa-google"></i></a>
                </div>
            </div>

            <!-- Footer Bottom -->
            <div class="footer-bottom text-center mt-4">
                <p class="m-0">© 2024 Rent It — A One Page Rental Car Theme made with passion</p>
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
    @RenderSection("Styles", required: false)
</body>
</html>
