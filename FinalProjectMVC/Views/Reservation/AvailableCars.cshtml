@model FinalProjectMVC.ViewModels.Reservation.ReservePageViewModel

<div class="container mt-5 pt-5">
    <h1 class="text-center text-wrap">Reserve Your Car</h1>

    <form asp-action="AvailableCars" method="get" class="mb-4">
        <div class="row">
            <div class="col-md-6">
                <label for="startDate" class="form-label">Start Date:</label>
                <input type="date" id="startDate" name="startDate" class="form-control" value="@Model.Reservation.StartDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-6">
                <label for="endDate" class="form-label">End Date:</label>
                <input type="date" id="endDate" name="endDate" class="form-control" value="@Model.Reservation.EndDate.ToString("yyyy-MM-dd")" />
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    @if (Model.AvailableCars.Any())
    {
        <h3>Available Cars</h3>
        <ul class="list-group">
            @foreach (var car in Model.AvailableCars)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>
                        <strong>@car.Brand @car.Model</strong> - $@car.PricePerDay/day - @car.Location
                    </span>
                    <a asp-action="Reserve"
                       asp-route-carId="@car.Id"
                       asp-route-startDate="@Model.Reservation.StartDate"
                       asp-route-endDate="@Model.Reservation.EndDate"
                       class="btn btn-success">Reserve</a>
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-danger">No cars available for the selected dates.</p>
    }
</div>
