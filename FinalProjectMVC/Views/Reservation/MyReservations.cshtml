@model FinalProjectMVC.ViewModels.Reservation.ReservePageViewModel

<div class="container mt-5 pt-5">
    <h2 class="text-center text-wrap">My Reservations</h2>

    @if (Model.ReservationList == null || !Model.ReservationList.Any())
    {
        <p class="text-danger text-center">No reservations found.</p>
    }
    else
    {
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>Brand</th>
                    <th>Model</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Location</th>
                    <th>Total Price</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reservation in Model.ReservationList)
                {
                    <tr>
                        <td>@reservation.Brand</td>
                        <td>@reservation.Model</td>
                        <td>@reservation.StartDate.ToString("yyyy-MM-dd")</td>
                        <td>@reservation.EndDate.ToString("yyyy-MM-dd")</td>
                        <td>@reservation.Location</td>
                        <td>$@reservation.TotalPrice</td>
                        <td>
                            @if (string.IsNullOrEmpty(reservation.Status))
                            {
                                <span class="badge bg-secondary">Pending</span>
                            }
                            else if (reservation.Status == "Approved")
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else if (reservation.Status == "Declined")
                            {
                                <span class="badge bg-danger">Declined</span>
                            }
                            else if (reservation.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Invalid</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>