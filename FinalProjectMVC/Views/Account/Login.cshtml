@using FinalProjectMVC.ViewModels.Account
@model LoginVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        .container {
            max-width: 400px;
            margin: auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .register-area {
            margin-top: 20px;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 10px;
        }

        .label-txt {
            margin: 10px 0;
            font-weight: bold;
            color: #333;
        }

        .input-wrapper {
            position: relative;
        }

        .input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: none;
            border-bottom: 2px solid #ccc;
            outline: none;
            transition: border-color 0.3s;
        }

            .input:focus {
                border-bottom: 2px solid #007bff;
            }

        .line-box {
            position: relative;
            height: 2px;
        }

        .line {
            position: absolute;
            height: 2px;
            background: #007bff;
            width: 0;
            transition: width 0.4s ease-in-out;
        }

        .input:focus + .line-box .line {
            width: 100%;
        }

        .register-password-eye,
        .register-password-eye-blind {
            cursor: pointer;
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 20px;
            color: #007bff;
        }

            .register-password-eye-blind.d-none {
                display: none;
            }

        button {
            width: 100%;
            padding: 10px;
            background: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            button:hover {
                background: #0056b3;
            }

        a {
            color: #007bff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
            max-width: 400px;
            width: 100%;
        }

        .modal-header {
            font-size: 18px;
            margin-bottom: 10px;
        }

        .close-modal {
            background: none;
            border: none;
            font-size: 18px;
            cursor: pointer;
            float: right;
            color: #007bff;
        }

            .close-modal:hover {
                color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Login</h1>
        <div class="register-area">

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="card-body">
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                </div>
            }

            <form asp-controller="Account" asp-action="Login" method="post" class="register-form">
                <label>
                    <p class="label-txt">ENTER YOUR EMAIL OR USERNAME</p>
                    <input asp-for="UsernameOrEmail" type="text" class="input">
                    <div class="line-box">
                        <div class="line"></div>
                    </div>
                    <span asp-validation-for="UsernameOrEmail" style="text-align:left !important; display:block" class="text-danger"></span>
                </label>

                <label>
                    <p class="label-txt">ENTER YOUR PASSWORD</p>
                    <div class="input-wrapper">
                        <input asp-for="Password" type="password" class="input">
                        <i class="fa-solid fa-eye register-password-eye"></i>
                        <i class="fa-solid fa-eye-slash d-none register-password-eye-blind"></i>
                    </div>
                    <div class="line-box">
                        <div class="line"></div>
                    </div>
                    <span asp-validation-for="Password" style="text-align:left !important; display:block" class="text-danger"></span>
                </label>

                <a asp-controller="Account" asp-action="Register" class="mx-2">Register</a>
                <a href="#" id="forgot-password-link" class="mx-2">Forgot Password?</a>

                <button type="submit">Login</button>
            </form>
        </div>
    </div>

    <!-- Modal for Forgot Password -->
    <div id="forgot-password-modal" class="modal">
        <div class="modal-content">
            <button class="close-modal" id="close-modal">&times;</button>
            <div class="modal-header">Forgot Password</div>
            <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                <label>
                    <p class="label-txt">ENTER YOUR EMAIL</p>
                    <input name="Email" type="email" class="input" required>
                    <div class="line-box">
                        <div class="line"></div>
                    </div>
                </label>
                <button type="submit">Send</button>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const modal = document.getElementById("forgot-password-modal");
            const forgotPasswordLink = document.getElementById("forgot-password-link");
            const closeModal = document.getElementById("close-modal");

            forgotPasswordLink.addEventListener("click", function (event) {
                event.preventDefault();
                modal.style.display = "flex";
            });

            closeModal.addEventListener("click", function () {
                modal.style.display = "none";
            });

            window.addEventListener("click", function (event) {
                if (event.target === modal) {
                    modal.style.display = "none";
                }
            });
        });
    </script>
</body>
</html>
