@model ContactViewModel

<body>
    <main>
        <div class="contact-container">
            <div class="contact-content">
                <!-- Contact Info Section -->
                <div class="contact-info">
                    <h2>Contact Us</h2>
                    <p><i class="fa-solid fa-house-chimney"></i> <strong>Address:</strong><br>987 Main St, New York, NY, 00001, U.S.A</p>
                    <p><i class="fa-solid fa-phone"></i> <strong>Telephone:</strong><br>(012) 345-7689</p>
                    <p><i class="fa-solid fa-fax"></i> <strong>Fax:</strong><br>0123456789</p>
                    <p>Phasellus pellentesque purus in massa. Aenean in pede phasellus libero ac tellus pellentesque semper.</p>
                    <p><strong>Customer Service:</strong><br><a href="mailto:malikvm@code.edu.az">malikvm@code.edu.az</a></p>
                    <p><strong>Returns and Refunds:</strong><br><a href="mailto:malikvm@code.edu.az">malikvm@code.edu.az</a></p>
                </div>

                <!-- Contact Form Section -->
                <div class="contact-form">
                    <h2>Contact Form</h2>

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success">
                            @Model.SuccessMessage
                        </div>
                    }

                    @using (Html.BeginForm("Index", "Contact", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <input type="text" name="Name" placeholder="Your Name" required value="@Model.Name">
                        <input type="email" name="Email" placeholder="Your Email" required value="@Model.Email">
                        <input type="text" name="Subject" placeholder="Subject" required value="@Model.Subject">
                        <textarea name="Message" placeholder="Your Message" required>@Model.Message</textarea>
                        <button type="submit">Send Message</button>
                    }
                </div>
            </div>
        </div>
    </main>
</body>