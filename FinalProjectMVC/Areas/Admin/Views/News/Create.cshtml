@model FinalProjectMVC.ViewModels.Admin.News.NewsVM

<div class="container mt-5">
    <h1 class="text-center">Create News</h1>

    <form asp-action="Create" method="post" class="mt-4">
        <div class="form-group">
            <label for="Title">Title</label>
            <input asp-for="Title" class="form-control" id="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" id="Description" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label for="NewsCategory">Category</label>
            <input asp-for="NewsCategory" class="form-control" id="NewsCategory" />
            <span asp-validation-for="NewsCategory" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label for="AuthorName">Author</label>
            <input asp-for="AuthorName" class="form-control" id="AuthorName" />
            <span asp-validation-for="AuthorName" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label for="NewsDate">NewsDate</label>
            <input asp-for="NewsDate" class="form-control" id="NewsDate" />
            <span asp-validation-for="NewsDate" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label for="ImagePath">Image Path</label>
            <input asp-for="ImagePath" class="form-control" id="ImagePath" />
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success mt-3">Create</button>
        <a asp-action="Index" class="btn btn-outline-danger mt-3">Cancel</a>
    </form>
</div>