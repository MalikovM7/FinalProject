@model FinalProjectMVC.ViewModels.Admin.Car.VehicleVM


<h1>Adjust Vehicle Availability</h1>

<form asp-action="Adjust" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Brand</label>
        <input class="form-control" asp-for="Brand" readonly />
    </div>
    <div class="form-group">
        <label>Model</label>
        <input class="form-control" asp-for="Model" readonly />
    </div>

    <div class="form-group">
        <label>Is Available</label>
        <select class="form-control" asp-for="IsAvailable">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div class="form-group">
        <label>Availability Start</label>
        <input type="date" class="form-control" asp-for="AvailabilityStart" />
    </div>

    <div class="form-group">
        <label>Availability End</label>
        <input type="date" class="form-control" asp-for="AvailabilityEnd" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
