@model IEnumerable<FinalProjectMVC.ViewModels.Admin.Car.VehicleVM>

<div class="container mt-5">
    <h2 class="text-center">Available Cars</h2>

    @if (Model == null || !Model.Any())
    {
        <p class="text-danger text-center mt-4">No cars are available for the selected date range.</p>
    }
    else
    {
        <table class="table table-striped table-bordered mt-4">
            <thead class="thead-dark">
                <tr>
                    <th>Image</th>
                    <th>Brand</th>
                    <th>Model</th>
                    <th>Year</th>
                    <th>Fuel Type</th>
                    <th>Price Per Day</th>
                    <th>Location</th>
                    <th>Category</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var car in Model)
                {
                    <tr>
                        <td>
                            <img src="@car.ImagePath" alt="@car.Brand" class="img-thumbnail" style="width: 100px; height: auto;" />
                        </td>
                        <td>@car.Brand</td>
                        <td>@car.Model</td>
                        <td>@car.Year</td>
                        <td>@car.Fueltype</td>
                        <td>@car.PricePerDay</td>
                        <td>@car.Location</td>
                        <td>@car.CategoryName</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-warning btn-sm mx-1">Edit</a>
                            <form asp-action="Delete" asp-route-id="@car.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to Car List</a>
    </div>
</div>
