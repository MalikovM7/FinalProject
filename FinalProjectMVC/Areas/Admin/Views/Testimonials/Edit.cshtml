@model TestimonialVM

<div class="container mt-5">
    <h2 class="text-center">Edit Testimonial</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="mt-4">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PersonName">Person Name</label>
            <input asp-for="PersonName" class="form-control" />
            <span asp-validation-for="PersonName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PersonJob">Person Job</label>
            <input asp-for="PersonJob" class="form-control" />
            <span asp-validation-for="PersonJob" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Current Picture</label>
            <div class="mb-2">
                <img src="~/assets/img/@Model.Picture" alt="Current picture of @Model.PersonName" class="img-thumbnail" style="max-width: 150px;">
            </div>
            <label asp-for="Photo">Upload New Picture</label>
            <input asp-for="Photo" type="file" class="form-control-file" />
            <span asp-validation-for="Photo" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>
