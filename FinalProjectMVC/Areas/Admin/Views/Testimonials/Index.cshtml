@model IEnumerable<Domain.Models.Testimomal>
<div class="container mt-5">
    <h1 class="text-center">Testimonials</h1>
    <div class="create-area mb-4">
        <a asp-action="Create" class="btn btn-success">Create Testimonial</a>
    </div>
    <div class="table-responsive pt-3 mt-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Person Name</th>
                    <th>Person Job</th>
                    <th>Picture</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Description</td>
                        <td>@item.PersonName</td>
                        <td>@item.PersonJob</td>
                        <td>
                            <img src="~/assets/img/@item.Picture" alt="Picture of @item.PersonName" class="img-thumbnail" style="max-width: 100px;">
                        </td>
                        <td class="d-flex" style="justify-content: space-between">
                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-primary">Detail</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Edit</a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
