@model IEnumerable<SliderVM>

<div class="container mt-5">
    <h1 class="text-center">Slider</h1>
    <div class="create-area">
        <a asp-action="Create" class="btn btn-success">Create</a>
    </div>
    <div class="table-responsive pt-3 mt-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Subtitles
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.Subtitle
                        </td>
                        <td class="d-flex" style="justify-content:space-between">
                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-primary">Detail</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Edit</a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                            <form asp-action="ChangeMainStatus" asp-route-id="@item.Id" method="post" class="d-inline">
                                <button type="submit" class="btn @(item.IsMain ? "btn-success btn-disabled-custom":"btn-danger")">Change main status</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

