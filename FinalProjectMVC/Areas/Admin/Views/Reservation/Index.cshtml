@model IEnumerable<FinalProjectMVC.ViewModels.Admin.Reservation.ReservationVM>

<h1>Reservations</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Car ID</th>
            <th>User ID</th>
            <th>Total Price</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.CarId</td>
                <td>@reservation.UserId</td>
                <td>@reservation.TotalPrice.ToString("C")</td>
                <td>@reservation.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@reservation.EndDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@reservation.CarId" class="btn btn-danger btn-sm">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>